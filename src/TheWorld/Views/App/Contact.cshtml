@model TheWorld.ViewModels.ContactViewModel
@{
    ViewBag.Title = "Contact US";
}

@section scripts {
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h3>Contact US</h3>
<form class="ui form" method="post">
    <div class="ui error message" asp-validation-summary="ModelOnly"></div>
    <div class="required field">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" value="" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="required field">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="text" value="" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="required field">
        <label asp-for="Message">Message</label>
        <textarea asp-for="Message" rows="4"></textarea>
        <span asp-validation-for="Message"></span>
   </div>
    <button class="ui button" type="submit">Submit</button>
</form>